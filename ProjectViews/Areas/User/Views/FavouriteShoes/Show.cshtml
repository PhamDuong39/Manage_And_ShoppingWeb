@model IEnumerable<ProjectViews.Areas.User.Models.FavouriteShoesModel>;
@{
	Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
	ViewData["Title"] = "Show";
}
@{
	HttpClient _httpClient = new HttpClient();
	ViewData["Title"] = "Show";
	List<string> imageExtensions = new List<string>()
	{
		".png", ".jpg", ".jpeg", ".gif", ".tiff", ".pdf"
	};
}
@if (Model.Count() == 0)
{
	<h1>There are no Ship Method in the database <a asp-action="Create">Create New ?</a> </h1>
}
<h1>FavouriteShoes</h1>
<p>
	<a asp-action="Create">Create New</a>
</p>


<div class="container">
	<div class="row align-items-start">
		@foreach (var item in Model)
		{
			<div class="col-3" style="margin-top:30px">
				<td>
					@{
						string extension = System.IO.Path.GetExtension(item.imageSource);
					}
					@if (imageExtensions.Contains(extension.Trim()))
					{
						<img src="~/images/@item.imageSource" height="300px">
					}
					else
					{
						<img src="~/images/anhbanh.jpg" height="200px">
					}
				</td>
				<br>
				<br>
				<center>
					<h5>@item.NameShoe</h5>
					<br>
					<button style="background-color:blue; color:yellow" >Detail</button>
				</center>

@*				@Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
				@Html.ActionLink("Details", "Details", new { id=item.ID }) |
				@Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
			</div>
		}
	</div>
</div>
