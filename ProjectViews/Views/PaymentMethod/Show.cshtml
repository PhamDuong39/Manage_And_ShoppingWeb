@model IEnumerable<Data.Models.PaymentMethods>

@{
    ViewData["Title"] = "Show";
}

<h1>Show</h1>

@if (Model.Count() == 0)
{
    <h1>There are no Payment Method in the database <a asp-action="Create">Create New ?</a> </h1>
}
else
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NameMethod)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NameMethod)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new {  id=item.Id }) |
                        @Html.ActionLink("Details", "Details", new {  id=item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new {  id=item.Id }) |

                    </td>
                </tr>
            }
        </tbody>
    </table>
}


